{% extends 'base.html.twig' %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h2>Login</h2>
<div class="form-container">
	<form class="login" action="{{ path('login') }}" method="post">
	    <input type="text" id="username" name="_username" placeholder="Username" />
	    <input type="password" id="password" name="_password" placeholder="Password" />
	    <input type="hidden" name="_target_path" value="/search" />
	    <button class="btn btn-success" type="submit">Login</button>
	</form>
</div>
{% endblock %}